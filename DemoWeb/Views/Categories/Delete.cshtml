@model DemoWeb.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h3>BẠN CHẮC CHẮN MUỐN XÓA CATEGORY NÀY?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Mã Category
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IDCate)
            </dd>

            <dt>
                Tên Category
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NameCate)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @*Phải có dòng HiddenFor để truyền được id của category vào hàm cần xóa*@
            @Html.HiddenFor(model => model.Id)
            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                @Html.ActionLink("Quay lại", "Index",null,new {@class ="btn btn-success"})
            </div>
        }
    </div>
</div>