
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/header_content.css" />
<div class="centercontent">
    <h2 class="centertitle">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm("Register", "Users"))
    {
        @Html.ValidationSummary(true)
        <div class="mb-3 mt-3">
            <label for="name" class="form-label">Tên:</label>
            <input type="text" class="form-control" id="name" name="NameCus">
        </div>
        <div class="mb-3 mt-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" class="form-control" id="email" name="EmailCus" required>
        </div>
        <div class="mb-3">
            <label for="pwd" class="form-label">Password:</label>
            <input type="password" class="form-control" id="pwd" name="PassCus" required>
        </div>
        <div class="mb-3 mt-3">
            <label for="phone" class="form-label">Số điện thoại:</label>
            <input type="text" class="form-control" id="phone" name="PhoneCus" required>
        </div>
        <button type="submit" class="btn btn-primary" >Xác nhận</button>
    }
</div>
