            <textarea rows="10" cols="30" class="form-control"></textarea>
            <label>
                <input class="form-check-input" type="checkbox"> Ghi nhớ
            </label>
            <br />
            <div class="btn-group-sm">
                <button type="button" class="btn btn-primary">Gửi</button>
            </div>
        </form>
    </div>

</div>