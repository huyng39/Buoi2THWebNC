
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div id="div-form">
    <h2 style="text-align:center;">ĐĂNG KÝ TÀI KHOẢN</h2>
    <form action="#" method="post" name="frmDK" style="margin:50px">
        <div id="div-thongtin">
            <fieldset style="width: 50%">
                <legend>Thông tin cá nhân</legend>
                <table>
                    <tr>
                        <td>
                            <label for="hoten">Họ tên: </label>
                        </td>
                        <td>
                            <input type="text" id="hoten" name="hoten" placeholder="Nhập họ tên ..." />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="matkhau">Mật khẩu: </label>
                        </td>
                        <td>
                            <input type="password" id="matkhau" name="matkhau" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="diachi">Địa chỉ: </label>
                        </td>
                        <td>
                            <select name="diachi">
                                <option value="1">TP.HCM</option>
                                <option value="2">Hà nội</option>
                                <option value="3">Huế</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="email">Email: </label>
                        </td>
                        <td>
                            <input type="text" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="weight">Cân nặng: </label>
                        </td>
                        <td>
                            <input type="text" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div id="div-sothich">
                                <fieldset>
                                    <legend>Sở thích</legend>
                                    <input type="checkbox" id="đb" name="ST" />Đá banh
                                    <input type="checkbox" id="cl" name="ST" />Cầu lông
                                    <input type="checkbox" id="xp" name="ST" />Xem phim
                                </fieldset>
                            </div>
                        </td>
                    </tr>
                </table>
            </fieldset>
        </div>
    </form>
</div>

